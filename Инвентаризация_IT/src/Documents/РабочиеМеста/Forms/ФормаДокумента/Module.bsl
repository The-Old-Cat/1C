  	ДанныеКомпьютера.Вставить("ТипОЗУ", Компьютер.ТипОЗУ);
	ДанныеКомпьютера.Вставить("КоличествоОЗУ", Компьютер.КоличествоОЗУ);
	ДанныеКомпьютера.Вставить("MACАдрес", Компьютер.MACАдрес);
	
